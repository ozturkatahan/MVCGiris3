
@{
    ViewBag.Title = "Ortalama";
}

<h2>Ortalama</h2>
@using (Html.BeginForm("Ortalama", "Deneme", FormMethod.Get, new { @class = "form-inline" }))
{
    @Html.Label("a", "Sayı 1", new { @class = "mr-2" })
    @Html.TextBox("a", null, new { @class = "form-control mr-3" })

    @Html.Label("b", "Sayı 2", new { @class = "mr-2" })
    @Html.TextBox("b", null, new { @class = "form-control mr-3" })

<button class="btn btn-primary">Hesapla</button>
}

@if (ViewBag.sonuc != null)
{
<div class="alert alert-success">
    Girdiğiniz sayıların ortalaması: @ViewBag.sonuc
</div>
}

